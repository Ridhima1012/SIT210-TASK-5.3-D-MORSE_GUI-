import tkinter as tk 
import RPi.GPIO as GPIO 
import time 


win = tk()
window.title("TASK 5.3 D MORSE CODE BLINKING")
window.geometry("600 X 400")

led = LED(17)

def dot():
    led.on()
    time.sleep(1)
    led.off()
    time.sleep(1)

def dash():
    led.on()
    time.sleep(1)
    led.off()
    time.sleep(1)

def close():
    win.destroy()


